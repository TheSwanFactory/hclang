{
  "name": "maml",
  "version": "0.0.1",
  "description": "The Multipurpose Abstract Markup Language",
  "license": "MIT",
  "repository": "https://github.com/TheSwanFactory/maml",
  "author": "Ernest N. Prabhakar, Ph.D.",
  "keywords": [
    "language",
    "markup",
    "html",
    "interpreter",
    "cli"
  ],
  "files": [
    "lib"
  ],
  "bin": {
    "maml": "lib/index.js",
    "hc": "lib/hc.js"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "set-bin": "chmod a+x ./lib/hc.js ./lib/index.js",
    "ts": "echo Using TypeScript && tsc --version && tsc --pretty && npm run set-bin",
    "build": "npm run clean && npm run lint && npm run ts",
    "run": "node lib/hc.js",
    "test": "npm run build && mocha --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "@types/lodash": "^4.14.44",
    "chalk": "^1.1.3",
    "clear": "0.0.1",
    "figlet": "^1.2.0",
    "inquirer": "^2.0.0",
    "lodash": "^4.17.2",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "@types/chai": "3.4.34",
    "@types/mocha": "2.2.38",
    "@types/node": "7.0.0",
    "chai": "^3.5.0",
    "chai-pretty-expect": "^1.0.1",
    "mocha": "^3.0.1",
    "rimraf": "^2.5.4",
    "ts-node": "^2.0.0",
    "tslint": "4.3.1",
    "typescript": "2.1.5"
  },
  "engines": {
    "node": ">=7.1.0"
  }
}
