{
  "name": "hclang",
  "version": "0.3.1",
  "description": "Homoiconic C: Programming without a Language",
  "license": "MIT",
  "repository": "https://github.com/TheSwanFactory/hclang",
  "author": "Ernest N. Prabhakar, Ph.D.",
  "keywords": [
    "language",
    "markup",
    "programming",
    "html",
    "maml",
    "hc",
    "interpreter",
    "cli"
  ],
  "files": [
    "lib"
  ],
  "bin": {
    "maml": "lib/cli/bin.js",
    "hc": "lib/cli/hc.js"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "bs:hc": "cat doc/{adoc.hc,BitScheme.adoc} > hc/BitScheme.hc",
    "bs:html": "asciidoctor doc/BitScheme.adoc && open doc/BitScheme.html",
    "bs:all": "npm run build && npm run bs:hc && npm run bs:html && npm run bs",
    "bs": "node lib/cli/hc.js hc/BitScheme.hc -t",
    "testdoc": "npm run build && node lib/cli/hc.js hc/testdoc.hc -t",
    "build": "rimraf lib && tslint \"{src,test}/**/*.ts\" && npm run ts",
    "check": "grep -e 'only' -e 'skip' test/*/* || echo 'Ran all tests'",
    "clean": "rimraf lib && rm -f *.log.*",
    "debug": "echo 'Use `debugger;`\n' && inspect _mocha --no-timeouts --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
    "done": "npm run clean && npm run bs:all && npm run check && npm run tag && npm install && git commit -am 'update version'",
    "lint": "tslint --force --format verbose \"{src,test}/**/*.ts\"",
    "inspect": "npm run build && node --inspect --require ts-node/register src/cli/hc.ts",
    "hc": "node lib/cli/hc.js",
    "test": "npm run build && mocha --require ts-node/register --recursive test/**/*-spec.ts",
    "tag": "bump patch -ct package*.json README.md src/version.ts",
    "tag:minor": "bump minor -ct package*.json README.md src/version.ts",
    "ts": "tsc --pretty --inlineSourceMap && chmod a+x ./lib/cli/hc.js",
    "ts:version": "echo TypeScript `tsc --version` ",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "@types/prompt-sync": "^4.1.0",
    "@types/prompt-sync-history": "^1.0.1",
    "big-integer": "^1.6.44",
    "chalk": "^2.4.2",
    "getopts": "^2.2.5",
    "inquirer": "^7.0.0",
    "prompt-sync": "^4.1.7",
    "prompt-sync-history": "^1.0.1",
    "version-bump-prompt": "^5.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.2",
    "@types/lodash": "4.14.138",
    "@types/mocha": "5.2.7",
    "@types/node": ">=12.7.4",
    "chai": "^4.2.0",
    "chai-pretty-expect": "1.0.1",
    "inspect-process": ">=0.5.0",
    "minimist": "1.2.0",
    "mocha": "6.2.0",
    "mocha-junit-reporter": "^1.23.1",
    "rimraf": "3.0.0",
    "ts-node": "8.3.0",
    "tslint": "5.20.0",
    "typescript": "3.6.2"
  },
  "engines": {
    "node": "7.5.0"
  }
}
