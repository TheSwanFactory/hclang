{
  "name": "hclang",
  "version": "0.0.5",
  "description": "Homoiconic C: Programming without a Language",
  "license": "MIT",
  "repository": "https://github.com/TheSwanFactory/hclang",
  "author": "Ernest N. Prabhakar, Ph.D.",
  "keywords": [
    "language",
    "markup",
    "programming",
    "html",
    "maml",
    "hc",
    "interpreter",
    "cli"
  ],
  "files": [
    "lib"
  ],
  "bin": {
    "maml": "lib/bin.js",
    "hc": "lib/hc.js"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "rimraf lib && tslint \"{src,test}/**/*.ts\" && tsc --pretty --inlineSourceMap && chmod a+x ./lib/hc.js ./lib/index.js",
    "clean": "rimraf lib && rm -f *.log.*",
    "debug": "echo 'Use `debugger;`\n' && inspect _mocha --no-timeouts --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
    "lint": "tslint --force --format verbose \"{src,test}/**/*.ts\"",
    "run": "node lib/hc.js",
    "set-bin": "chmod a+x ./lib/hc.js ./lib/index.js",
    "test": "npm run build && mocha --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
    "ts": "echo Using TypeScript && tsc --version && tsc --pretty && npm run set-bin",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "inquirer": "3.0.6",
    "inspect-process": "^0.4.2",
    "lodash": "4.17.4",
    "minimist": "1.2.0",
    "mocha-junit-reporter": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^7.0.5",
    "@types/chai": "3.4.35",
    "@types/chalk": "^0.4.31",
    "@types/lodash": "4.14.61",
    "@types/mocha": "2.2.40",
    "chai": "3.5.0",
    "chai-pretty-expect": "1.0.1",
    "mocha": "3.2.0",
    "rimraf": "2.6.1",
    "ts-node": "3.0.2",
    "tslint": "5.0.0",
    "typescript": "2.2.2"
  },
  "engines": {
    "node": "7.5.0"
  }
}
