{
  "name": "hclang",
  "version": "0.1.1",
  "description": "Homoiconic C: Programming without a Language",
  "license": "MIT",
  "repository": "https://github.com/TheSwanFactory/hclang",
  "author": "Ernest N. Prabhakar, Ph.D.",
  "keywords": [
    "language",
    "markup",
    "programming",
    "html",
    "maml",
    "hc",
    "interpreter",
    "cli"
  ],
  "files": [
    "lib"
  ],
  "bin": {
    "maml": "lib/cli/bin.js",
    "hc": "lib/cli/hc.js"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "rimraf lib && tslint \"{src,test}/**/*.ts\" && tsc --pretty --inlineSourceMap && chmod a+x ./lib/hc.js ./lib/index.js",
    "clean": "rimraf lib && rm -f *.log.*",
    "debug": "echo 'Use `debugger;`\n' && inspect _mocha --no-timeouts --compilers ts:ts-node/register --recursive test/**/*-spec.ts",
    "lint": "tslint --force --format verbose \"{src,test}/**/*.ts\"",
    "run": "node lib/hc.js",
    "set-bin": "chmod a+x ./lib/hc.js ./lib/index.js",
    "test": "npm run build && mocha --require ts-node/register --recursive test/**/*-spec.ts",
    "tag": "bump patch -ctp README.md",
    "ts": "echo Using TypeScript && tsc --version && tsc --pretty && npm run set-bin",
    "watch": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "dependencies": {
    "chalk": ">=2.3.0",
    "getopts": "^2.2.5",
    "inquirer": "^6.5.1",
    "lodash": "^4.17.15",
    "prompt-sync-history": "^1.0.1",
    "version-bump-prompt": "^5.0.4"
  },
  "devDependencies": {
    "@types/chai": "4.2.0",
    "@types/chalk": ">=2.2.0",
    "@types/lodash": "4.14.92",
    "@types/mocha": "2.2.46",
    "@types/node": ">=9.3.0",
    "chai": "^4.2.0",
    "chai-pretty-expect": "1.0.1",
    "inspect-process": ">=0.5.0",
    "minimist": "1.2.0",
    "mocha": "4.1.0",
    "mocha-junit-reporter": "^1.23.1",
    "rimraf": "2.6.2",
    "ts-node": "4.1.0",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
  "engines": {
    "node": "7.5.0"
  }
}
