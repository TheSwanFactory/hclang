{
  "name": "hclang",
  "displayName": "Homoiconic C",
  "description": "Syntax highlighting and language support for Homoiconic C (HC) - the universal language for code and data",
  "version": "0.1.0",
  "publisher": "TheSwanFactory",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TheSwanFactory/hclang.git",
    "directory": "vscode-extension"
  },
  "bugs": {
    "url": "https://github.com/TheSwanFactory/hclang/issues"
  },
  "homepage": "https://github.com/TheSwanFactory/hclang#readme",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "homoiconic",
    "hc",
    "hclang",
    "syntax",
    "highlighting"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hclang",
        "aliases": [
          "Homoiconic C",
          "HC",
          "hclang"
        ],
        "extensions": [
          ".hc"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/icon.png",
          "dark": "./images/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "hclang",
        "scopeName": "source.hclang",
        "path": "./syntaxes/hc.tmLanguage.json"
      }
    ]
  }
}
