{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["es6"],
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*-spec.ts"
  ]
}
