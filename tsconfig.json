{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "types": [
      "mocha", "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*-spec.ts"
  ]
}
